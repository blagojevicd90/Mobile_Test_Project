<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>


    <style name="ButtonStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OmiseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/primary_accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/OmiseActionBarStyle</item>
        <item name="android:editTextStyle">@style/OmiseEditText</item>
        <item name="android:buttonStyle">@style/OmiseButton</item>
        <item name="android:itemTextAppearance">@style/OmiseItemTextAppearance</item>
        <item name="editTextLabelStyle">@style/OmiseEditTextLabel</item>
        <item name="editTextErrorStyle">@style/OmiseEditTextErrorMessage</item>
    </style>


    <style name="OmiseActionBarStyle" parent="Widget.AppCompat.Light.ActionBar" />

    <style name="OmiseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text_outlined</item>
        <item name="android:textAppearance">@style/OmiseEditTextAppearance</item>
    </style>

    <style name="OmiseEditTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/edit_text_text_size</item>
    </style>

    <style name="OmiseEditTextLabel">
        <item name="android:textAppearance">@style/OmiseEditTextLabelAppearance</item>
    </style>

    <style name="OmiseEditTextLabelAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OmiseEditTextErrorMessage">
        <item name="android:textAppearance">@style/OmiseEditTextErrorMessageAppearance</item>
    </style>

    <style name="OmiseEditTextErrorMessageAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="OmiseFloatingTitle" parent="TextAppearance.AppCompat.Caption" />

    <style name="OmiseBodyTitle" parent="TextAppearance.AppCompat.Body1" />

    <style name="OmiseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAppearance">@style/OmiseButtonTextAppearance</item>
    </style>

    <style name="OmiseButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="OmiseItemTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

</resources>
